<div class="container">
  
  <h1>Edit the movie {{title}}</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/movies/edit?movieId={{movie._id}}" method="POST">
        <div class="form-group">
          <label for="field1">Title</label>
          <input type="text" class="form-control" id="field1" name="title" value="{{title}}">
        </div>
        <div class="form-group">
          <label for="field2">Genre</label>
          <input type="text" class="form-control" id="field2" name="genre" value="{{genre}}">
        </div>
        <div class="form-group">
          <label for="field3">Plot</label>
          <input type="text" class="form-control" id="field3" name="plot" value="{{plot}}">

        <button type="submit" class="btn btn-dark">Edit</button>
      </form>

      <p><a href="/">Go back to the main page</a></p>

      <p> <a href="/movies">Go back to the list of movies</a></p>







    </div>
  </div>

</div>